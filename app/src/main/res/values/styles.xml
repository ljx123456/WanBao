    <style name="SingleChooseTag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="item_textColor">#FCC725</item>//选项item文字默认值
        <item name="item_backgroundColor">#212123</item>//选项item背景色
        <!--<item name="item_selectedTextColor">#535252</item>选中后选项item的文字颜色-->
        <!--<item name="item_selectedBackgroundColor">#ffffff</item>选中后选项item的背景颜色-->
        <item name="item_radius">16dp</item>
        <item name="item_strokeColor">#FCC725</item>选项item的边缘颜色
        <!--<item name="item_selectedStrokeColor">#535252</item>选项item选中后边缘颜色-->
        <item name="item_strokeWidth">1dp</item>选项item边缘的大小
        <item name="item_horizontalSpacing">12dp</item>
        <item name="item_verticalSpacing">12dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="item_horizontalPadding">8dp</item>
        <item name="item_verticalPadding">8dp</item>
        <!--单位dp-->
        <item name="item_width">wrap_content</item>
        <item name="item_height">wrap_content</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="item_maxEms">5</item>
        <!--单选-->
        <item name="item_multiChooseable">false</item>
        <item name="item_click">false</item>
    </style>

