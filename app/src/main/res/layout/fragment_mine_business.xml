<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#212123">

    <RelativeLayout
        android:id="@+id/layout_business"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:descendantFocusability="blocksDescendants"
        android:visibility="visible">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <wanbao.yongchao.com.wanbao.ui.main.utils.banner.ConvenientBanner
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            app:canLoop="true" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@drawable/layout_title_bg">

                            <ImageView
                                android:id="@+id/iv_set_business"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_alignParentRight="true"
                                android:scaleType="centerInside"
                                android:src="@mipmap/mine_button_setting" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginTop="214dp"
                            android:background="@drawable/vp_community_bg">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="96dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/layout_like_business"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_like_num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#ffffffff"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="我点赞的"
                                        android:textColor="#a6ffffff"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="#40000000" />

                                <LinearLayout
                                    android:id="@+id/layout_fans_business"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_fans_num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#ffffffff"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="粉丝"
                                        android:textColor="#a6ffffff"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="#40000000" />

                                <LinearLayout
                                    android:id="@+id/layout_focus_business"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_follow_num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#ffffffff"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="关注"
                                        android:textColor="#a6ffffff"
                                        android:textSize="12dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/iv_header"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="194dp"
                            android:scaleType="centerCrop"
                            app:riv_oval="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_auth_business"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/layout_business_auth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_business_auth"
                                android:layout_width="wrap_content"
                                android:layout_height="14dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="1dp"
                                android:background="@drawable/tv_auth_bg"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingRight="4dp"
                                android:text="认证商家"
                                android:textColor="#000000"
                                android:textSize="10dp" />


                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/homepage_icon_authentication_shop_black" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/layout_none_auth_business"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_auth_tips_business"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="暂无认证信息"
                                android:textColor="#73ffffff"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/tv_none_auth_business"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="（点我去认证）"
                                android:textColor="#fffcc725"
                                android:textSize="13dp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:maxEms="10"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="#d9ffffff"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tv_Id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="12dp"
                            android:text="ID："
                            android:textColor="#73ffffff"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_explain_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="12dp"
                        android:hint="点击添加商家简介，让大家更了解你们~"
                        android:text=""
                        android:textColor="#a6ffffff"
                        android:textColorHint="#73ffffff"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="11.5dp"
                        android:layout_marginRight="12dp"
                        android:background="#40000000" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@mipmap/shophomepage_icon_navigation"
                                    android:drawablePadding="6dp"
                                    android:text="地址："
                                    android:textColor="#a6ffffff"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="63dp"
                                    android:maxLines="2"
                                    android:text=""
                                    android:textColor="#a6ffffff"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@mipmap/shophomepage_button_phone"
                                    android:drawablePadding="6dp"
                                    android:text="电话："
                                    android:textColor="#a6ffffff"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="63dp"
                                    android:text=""
                                    android:textColor="#a6ffffff"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@mipmap/shophomepage_icon_time"
                                    android:drawablePadding="6dp"
                                    android:text="营业："
                                    android:textColor="#a6ffffff"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="63dp"
                                    android:maxLines="1"
                                    android:text=""
                                    android:textColor="#a6ffffff"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@mipmap/shophomepage_icon_money"
                                    android:drawablePadding="6dp"
                                    android:text="人均："
                                    android:textColor="#a6ffffff"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_money"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="63dp"
                                    android:maxLines="1"
                                    android:text=""
                                    android:textColor="#a6ffffff"
                                    android:textSize="14dp"
                                    android:visibility="gone"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="40dp"
                                    android:layout_marginRight="63dp"
                                    android:drawableRight="@mipmap/mine_icon_setting_right"
                                    android:drawableTint="#fffcc725"
                                    android:drawablePadding="1dp"
                                    android:text="立即设置"
                                    android:textColor="#fffcc725"
                                    android:textSize="14dp"
                                    android:id="@+id/tv_money_set"
                                    android:visibility="gone"/>

                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="22dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_content_choose1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="动态"
                        android:textColor="#fffcc725"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_content_choose2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="夜计划"
                        android:textColor="#a6ffffff"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_content_choose3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="打卡"
                        android:textColor="#a6ffffff"
                        android:textSize="16dp" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fl_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></FrameLayout>
            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#212123"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#d9ffffff"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_choose"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="44dp"
            android:background="#212123"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_choose1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="动态"
                android:textColor="#fffcc725"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_choose2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_choose1"
                android:text="夜计划"
                android:textColor="#a6ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_choose3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_choose2"
                android:text="打卡"
                android:textColor="#a6ffffff"
                android:textSize="16dp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_user"
        android:descendantFocusability="blocksDescendants"
        android:visibility="gone">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/scroll_user">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_top_user">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/banner_user"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@drawable/layout_title_bg">
                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_alignParentRight="true"
                                android:scaleType="centerInside"
                                android:src="@mipmap/mine_button_setting"
                                android:id="@+id/iv_set"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginTop="144dp"
                            android:background="@drawable/vp_community_bg">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="96dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_horizontal"
                                    android:id="@+id/layout_like">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#ffffffff"
                                        android:textSize="16dp"
                                        android:id="@+id/tv_like_num_user"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="我点赞的"
                                        android:textColor="#a6ffffff"
                                        android:textSize="12dp"/>
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="#40000000"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_horizontal"
                                    android:id="@+id/layout_fans_user">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#ffffffff"
                                        android:textSize="16dp"
                                        android:id="@+id/tv_fans_num_user"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="粉丝"
                                        android:textColor="#a6ffffff"
                                        android:textSize="12dp"/>
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="#40000000"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_horizontal"
                                    android:id="@+id/layout_like_user">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#ffffffff"
                                        android:textSize="16dp"
                                        android:id="@+id/tv_follow_num_user"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="关注"
                                        android:textColor="#a6ffffff"
                                        android:textSize="12dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_marginTop="124dp"
                            android:layout_marginLeft="12dp"
                            android:scaleType="centerCrop"
                            app:riv_oval="true"
                            android:id="@+id/iv_header_user"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="13dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/layout_auth_user">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:id="@+id/layout_realname_user"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_height="14dp"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/tv_auth_bg"
                                android:paddingRight="4dp"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:textSize="10dp"
                                android:textColor="#000000"
                                android:text="实名认证"
                                android:id="@+id/tv_realname_user"/>
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/homepage_icon_authentication_realname_black"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:id="@+id/layout_blogger_user"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="14dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="1dp"
                                android:background="@drawable/tv_auth_bg"
                                android:paddingRight="6dp"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:textSize="10dp"
                                android:textColor="#000000"
                                android:text="行业大V认证"
                                android:id="@+id/tv_blogger_user"/>
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/homepage_icon_authentication_blogger_black"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:id="@+id/layout_none_auth"
                            android:orientation="horizontal"
                            android:visibility="visible">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="暂无认证信息"
                                android:textColor="#73ffffff"
                                android:textSize="13dp"
                                android:id="@+id/tv_auth_tips"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="（点我去认证）"
                                android:textColor="#fffcc725"
                                android:textSize="13dp"
                                android:id="@+id/tv_none_auth"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="13dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
