<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_login_bg">
    
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="223dp"
        android:background="@drawable/dialog_login_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="151dp">
            <!--<com.makeramen.roundedimageview.RoundedImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="151dp"-->
                <!--app:riv_corner_radius_top_left="12dp"-->
                <!--app:riv_corner_radius_top_right="12dp"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:src="@mipmap/illustration_city"/>-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/illustration_city"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="登录查看更多精彩内容"
                android:textColor="#fffcc725"
                android:textSize="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:layout_width="206dp"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/tv_dialog_login_bg"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="登录/注册"
                android:textColor="#ffffffff"
                android:textSize="16dp"
                android:id="@+id/tv_login"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_login"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="随便看看"
                android:textColor="#73000000"
                android:textSize="11dp"
                android:id="@+id/tv_over"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>