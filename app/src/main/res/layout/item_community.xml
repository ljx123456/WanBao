<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:background="@drawable/item_community_bg"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                app:riv_oval="true"
                android:src="@mipmap/ic_user_df"
                android:id="@+id/iv_item_community_header"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_item_community_header"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:text="小酒馆"
                android:textColor="#d9ffffff"
                android:maxEms="10"
                android:singleLine="false"
                android:maxLines="2"
                android:textSize="14dp"
                android:id="@+id/tv_item_community_name" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_item_community_name"
                android:layout_alignTop="@+id/tv_item_community_name"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/homepage_icon_authentication_blogger"
                android:scaleType="centerInside"
                android:id="@+id/iv_item_community_auth"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_item_community_header"
                android:layout_below="@id/tv_item_community_name"
                android:layout_marginLeft="8dp"
                android:text="18分钟前"
                android:textColor="#73ffffff"
                android:textSize="12dp"
                android:id="@+id/tv_item_community_time"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:src="@mipmap/homepage_button_list_more"
                android:scaleType="centerInside"
                android:id="@+id/iv_item_community_more"
                android:visibility="gone"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:text="关注"
                android:textColor="#fffcc725"
                android:textSize="14dp"
                android:id="@+id/tv_item_community_focus"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"

            android:text="#今晚怎么过#"
            android:textColor="#fffcc725"
            android:textSize="14dp"
            android:id="@+id/tv_item_community_topic"/>

        <wanbao.yongchao.com.wanbao.view.allTextView.ShowAllTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:textColor="#d9ffffff"
            android:textSize="14dp"
            android:visibility="gone"
            android:id="@+id/tv_item_community_content"/>

        <wanbao.yongchao.com.wanbao.view.NineGrid.NineGridTestLayout
            android:id="@+id/layout_nine_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            app:sapcing="6dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:id="@+id/layout_community_video"
            android:visibility="gone">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="wrap_content"
                android:layout_height="184dp"
                app:riv_corner_radius="4dp"
                android:id="@+id/iv_item_community_video"
                android:scaleType="fitStart"
                android:visibility="gone"/>
            <!--<com.makeramen.roundedimageview.RoundedImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="184dp"-->
                <!--app:riv_corner_radius="4dp"-->
                <!--android:background="#33000000"-->
                <!--android:src="@mipmap/homepage_button_play"-->
                <!--android:scaleType="centerInside"-->
                <!--android:id="@+id/iv_item_community_play"/>-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="184dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:id="@+id/iv_item_community_play"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:id="@+id/layout_community_vertical_video"
            android:visibility="gone">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="153dp"
                android:layout_height="204dp"
                app:riv_corner_radius="4dp"
                android:id="@+id/iv_item_community_vertical_video"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="153dp"
                android:layout_height="204dp"
                app:riv_corner_radius="4dp"
                android:background="#33000000"
                android:src="@mipmap/homepage_button_play"
                android:scaleType="centerInside"
                android:id="@+id/iv_item_community_vertical_play"/>
        </RelativeLayout>

        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--&gt;-->
            <!---->
            <!---->
            <!---->
        <!--</RelativeLayout>-->

        
        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:paddingRight="8dp"

            android:text="成都·九眼桥·小酒馆"
            android:textColor="#FCC725"
            android:textSize="13dp"
            android:drawableLeft="@mipmap/homepage_icon_list_location"
            android:drawablePadding="1dp"
            android:id="@+id/tv_item_community_address"
            android:visibility="gone"/>
        <!--android:background="@drawable/tv_item_community_address_bg"-->
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#40000000"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_share">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="999+"
                    android:textColor="#a6ffffff"
                    android:textSize="12dp"
                    android:drawableLeft="@mipmap/homepage_button_list_share"
                    android:drawablePadding="4dp"
                    android:id="@+id/tv_item_community_share"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_comment">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="999+"
                    android:textColor="#a6ffffff"
                    android:textSize="12dp"
                    android:drawableLeft="@mipmap/homepage_button_list_comment"
                    android:drawablePadding="4dp"
                    android:id="@+id/tv_item_community_comment"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_like">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="999+"
                    android:textColor="#a6ffffff"
                    android:textSize="12dp"
                    android:drawableLeft="@mipmap/homepage_button_list_like_nor"
                    android:drawablePadding="4dp"
                    android:id="@+id/tv_item_community_like"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
