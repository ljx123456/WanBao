<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#212123">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_user">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_top_user">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/banner_user"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/layout_title_bg">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="44dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/navbar_button_back"
                            android:scaleType="centerInside"
                            android:id="@+id/iv_back_user"/>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="44dp"
                            android:layout_alignParentRight="true"
                            android:scaleType="centerInside"
                            android:src="@mipmap/nav_button_more"
                            android:id="@+id/iv_more_user"/>
                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="92dp"
                        android:background="@drawable/layout_title_bottom_bg">

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/tv_follow_bg"
                            android:gravity="center"
                            android:text="关注"
                            android:textColor="#ff000000"
                            android:textSize="14dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="144dp"
                        android:background="@drawable/vp_community_bg">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="96dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#ffffffff"
                                    android:textSize="16dp"
                                    android:id="@+id/tv_community_num_user"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="动态"
                                    android:textColor="#a6ffffff"
                                    android:textSize="12dp"/>
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:background="#40000000"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_horizontal"
                                android:id="@+id/layout_fans_user">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#ffffffff"
                                    android:textSize="16dp"
                                    android:id="@+id/tv_fans_num_user"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="粉丝"
                                    android:textColor="#a6ffffff"
                                    android:textSize="12dp"/>
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:background="#40000000"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_horizontal"
                                android:id="@+id/layout_like_user">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#ffffffff"
                                    android:textSize="16dp"
                                    android:id="@+id/tv_follow_num_user"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="关注"
                                    android:textColor="#a6ffffff"
                                    android:textSize="12dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:layout_marginTop="124dp"
                        android:layout_marginLeft="12dp"
                        android:scaleType="centerCrop"
                        app:riv_oval="true"
                        android:id="@+id/iv_header_user"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_auth_user">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/layout_realname_user"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/tv_auth_bg"
                            android:paddingRight="4dp"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:text="实名认证"
                            android:id="@+id/tv_realname_user"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/homepage_icon_authentication_realname_black"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/layout_blogger_user"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/tv_auth_bg"
                            android:paddingRight="4dp"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:text="行业大V认证"
                            android:id="@+id/tv_blogger_user"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/homepage_icon_authentication_blogger_black"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:maxEms="10"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="#d9ffffff"
                        android:textSize="20dp"
                        android:id="@+id/tv_name_user"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="#a6ffffff"
                        android:layout_toRightOf="@+id/tv_name_user"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text=""
                        android:textSize="11dp"

                        android:id="@+id/tv_age_user"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="#73ffffff"
                        android:textSize="14dp"
                        android:id="@+id/tv_Id_user"/>
                </RelativeLayout>

                <wanbao.yongchao.com.wanbao.view.allTextView.ShowAllTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="#a6ffffff"
                    android:textSize="14dp"
                    android:id="@+id/tv_explain_short_user"
                    ></wanbao.yongchao.com.wanbao.view.allTextView.ShowAllTextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="#a6ffffff"
                    android:textSize="14dp"
                    android:id="@+id/tv_explain_all_user"
                    android:visibility="gone"/>

                <wanbao.yongchao.com.wanbao.view.tag.MultiLineChooseLayout
                    android:id="@+id/tag_user"
                    style="@style/HomePageTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#40000000"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="11.5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="动态"
                    android:textColor="#fffcc725"
                    android:textSize="20dp"
                    android:id="@+id/tv_content_choose_user"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_container_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
        </LinearLayout>




    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#212123"
        android:id="@+id/layout_title_user"
        android:visibility="invisible">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/navbar_button_back"
            android:scaleType="centerInside"
            android:id="@+id/iv_title_back_user"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#d9ffffff"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_title_user"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:src="@mipmap/nav_button_more"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:id="@+id/iv_title_more_user"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:background="#212123"
        android:id="@+id/layout_choose_user"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:text="动态"
            android:textColor="#fffcc725"
            android:textSize="20dp"
            android:id="@+id/tv_choose_user"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_homepage_bg"
        android:gravity="center"
        android:text="打个招呼"
        android:textSize="16dp"
        android:textColor="#000000"
        android:id="@+id/btn_homepage_user"/>

</RelativeLayout>
