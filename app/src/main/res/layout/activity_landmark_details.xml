<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#212123">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:orientation="vertical"
                android:id="@+id/layout_top">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="355dp">
                    <wanbao.yongchao.com.wanbao.ui.main.utils.explore_banner.ConvenientBanner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/banner"></wanbao.yongchao.com.wanbao.ui.main.utils.explore_banner.ConvenientBanner>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/layout_title_mask_bg">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="44dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/navbar_button_back"
                            android:id="@+id/iv_back"/>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="44dp"
                            android:layout_alignParentRight="true"
                            android:scaleType="centerInside"
                            android:src="@mipmap/navbar_button_share"
                            android:id="@+id/iv_share"/>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="12dp"
                    android:text=""
                    android:textColor="#fffcc725"
                    android:textSize="20dp"
                    android:id="@+id/tv_name"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="12dp"
                    android:text=""
                    android:textColor="#a6ffffff"
                    android:textSize="14dp"
                    android:id="@+id/tv_content"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="44dp"
                    android:background="#2C2C2F"
                    android:id="@+id/layout_address">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/list_merchant_icon_location"
                        android:scaleType="centerInside"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#a6ffffff"
                            android:textSize="14dp"
                            android:id="@+id/tv_address_name"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text=""
                            android:textColor="#73ffffff"
                            android:textSize="12dp"
                            android:id="@+id/tv_address_details"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/signin_identity_business_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/layout_want">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="12dp"
                        android:id="@+id/layout_user">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="84dp"
                            app:riv_oval="true"
                            android:scaleType="centerCrop"

                            android:id="@+id/iv_user5"/>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="63dp"
                            app:riv_oval="true"
                            android:scaleType="centerCrop"

                            android:id="@+id/iv_user4"/>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42dp"
                            app:riv_oval="true"
                            android:scaleType="centerCrop"

                            android:id="@+id/iv_user3"/>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="21dp"
                            app:riv_oval="true"
                            android:scaleType="centerCrop"

                            android:id="@+id/iv_user2"/>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            app:riv_oval="true"
                            android:scaleType="centerCrop"

                            android:id="@+id/iv_user1"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/layout_user"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="#a6ffffff"
                        android:textSize="13dp"
                        android:id="@+id/tv_num"/>

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/tv_follow_bg"
                        android:gravity="center"
                        android:text="想去"
                        android:textColor="#ff000000"
                        android:textSize="13dp"
                        android:id="@+id/tv_want"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#40000000"/>
                </RelativeLayout>
            </LinearLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:text="打卡动态"
                    android:textColor="#fffcc725"
                    android:textSize="16dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fl_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="12dp"></RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#212123"
        android:id="@+id/layout_title"
        android:visibility="invisible">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/navbar_button_back"
            android:scaleType="centerInside"
            android:id="@+id/iv_title_back"/>


        <ImageView
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:src="@mipmap/navbar_button_share"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:id="@+id/iv_title_share"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:background="#212123"
        android:id="@+id/layout_choose"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="打卡动态"
            android:textColor="#fffcc725"
            android:textSize="16sp" />
    </RelativeLayout>



</RelativeLayout>
