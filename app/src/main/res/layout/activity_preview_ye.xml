<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#212123">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <wanbao.yongchao.com.wanbao.ui.main.utils.explore_banner.ConvenientBanner
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/banner"></wanbao.yongchao.com.wanbao.ui.main.utils.explore_banner.ConvenientBanner>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:src="@mipmap/navbar_button_back"
                    android:scaleType="centerInside"
                    android:id="@+id/iv_back"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/iv_header"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxEms="11"
                        android:singleLine="false"

                        android:textColor="#d9ffffff"
                        android:textSize="16dp"
                        android:id="@+id/tv_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="#73ffffff"
                        android:textSize="12dp"
                        android:id="@+id/tv_time"/>
                </LinearLayout>

            </RelativeLayout>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="32dp"-->
                <!--android:layout_marginLeft="12dp"-->
                <!--android:text="成都·游乐场"-->
                <!--android:textColor="#fffcc725"-->
                <!--android:textSize="12dp"-->
                <!--android:id="@+id/tv_type"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="6dp"
                android:text=""
                android:textColor="#d9ffffff"
                android:textSize="20dp"
                android:id="@+id/tv_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text=""
                android:textColor="#a6ffffff"
                android:lineSpacingExtra="4dp"
                android:textSize="14dp"
                android:id="@+id/tv_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2C2C2F"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="44dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动地址："
                        android:textColor="#a6ffffff"
                        android:textSize="14dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:text=""
                        android:textColor="#a6ffffff"
                        android:textSize="14dp"
                        android:id="@+id/tv_city"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="82dp"
                    android:layout_marginTop="6dp"
                    android:lineSpacingExtra="4dp"
                    android:text=""
                    android:textColor="#a6ffffff"
                    android:textSize="14dp"
                    android:id="@+id/tv_address"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="12dp"
                    android:text=""
                    android:textColor="#a6ffffff"
                    android:textSize="14dp"
                    android:id="@+id/tv_activities_time"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:text=""
                    android:textColor="#a6ffffff"
                    android:textSize="14dp"
                    android:id="@+id/tv_phone"/>

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#212123"
        android:id="@+id/layout_title"
        android:visibility="invisible">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/navbar_button_back"
            android:scaleType="centerInside"
            android:id="@+id/iv_title_back"/>

    </RelativeLayout>
    

</RelativeLayout>