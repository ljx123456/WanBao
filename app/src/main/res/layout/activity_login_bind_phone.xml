<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/signin_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/signin_button_back"
        android:scaleType="centerInside"
        android:id="@+id/login_bind_back"/>


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/signin_button_close"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:id="@+id/login_phone_close"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="24dp"
        android:text="应《中国人民共和国网络安全法》要求
为了更好地保障您的账号安全，请绑定手机号"
        android:textColor="#d9ffffff"
        android:textSize="14dp"
        android:id="@+id/tv_bind_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:background="@drawable/login_phone_bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="12dp"
                    android:layout_weight="1"
                    android:background="#2C2C2F"
                    android:theme="@style/inputStyle"
                    android:inputType="number"
                    android:maxLength="11"
                    android:hint="请在此输入您的手机号"
                    android:textSize="16dp"
                    android:textColorHint="#40ffffff"
                    android:textColor="#D9ffffff"
                    android:id="@+id/edit_login_phone"/>
                <TextView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:text="+86"
                    android:textSize="16dp"
                    android:textColor="#D9ffffff"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#40000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:text="请输入正确的手机号"
                android:textColor="#fffc4625"
                android:textSize="13dp"
                android:id="@+id/tv_phone_tips"
                android:visibility="gone"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_next_bg"
            android:id="@+id/login_phone_next"
            android:clickable="false">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/signin_icon_next_default"
                android:id="@+id/iv_login_phone_next"/>
        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>
