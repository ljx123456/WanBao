<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#212123">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_user">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_top_user">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/banner_user"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/layout_title_bg">
                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_alignParentRight="true"
                            android:scaleType="centerInside"
                            android:src="@mipmap/mine_button_setting"
                            android:id="@+id/iv_set"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="144dp"
                        android:background="@drawable/vp_community_bg">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="96dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_horizontal"
                                android:id="@+id/layout_like">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="#ffffffff"
                                    android:textSize="16dp"
                                    android:id="@+id/tv_like_num_user"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="我点赞的"
                                    android:textColor="#a6ffffff"
                                    android:textSize="12dp"/>
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:background="#40000000"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_horizontal"
                                android:id="@+id/layout_fans_user">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="#ffffffff"
                                    android:textSize="16dp"
                                    android:id="@+id/tv_fans_num_user"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="粉丝"
                                    android:textColor="#a6ffffff"
                                    android:textSize="12dp"/>
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:background="#40000000"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_horizontal"
                                android:id="@+id/layout_like_user">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="#ffffffff"
                                    android:textSize="16dp"
                                    android:id="@+id/tv_follow_num_user"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="关注"
                                    android:textColor="#a6ffffff"
                                    android:textSize="12dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:layout_marginTop="124dp"
                        android:layout_marginLeft="12dp"
                        android:scaleType="centerCrop"
                        app:riv_oval="true"
                        android:id="@+id/iv_header_user"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_auth_user">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/layout_realname_user"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/tv_auth_bg"
                            android:paddingRight="4dp"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:text="实名认证"
                            android:id="@+id/tv_realname_user"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/homepage_icon_authentication_realname_black"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/layout_blogger_user"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/tv_auth_bg"
                            android:paddingRight="4dp"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:text="行业大V认证"
                            android:id="@+id/tv_blogger_user"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/homepage_icon_authentication_blogger_black"/>

                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/layout_none_auth"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="暂无认证信息"
                            android:textColor="#73ffffff"
                            android:textSize="13dp"
                            android:id="@+id/tv_auth_tips"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（点我去认证）"
                            android:textColor="#fffcc725"
                            android:textSize="13dp"
                            android:id="@+id/tv_none_auth"/>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:maxEms="10"
                        android:maxLines="2"
                        android:textColor="#d9ffffff"
                        android:textSize="20dp"
                        android:id="@+id/tv_name_user"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="#a6ffffff"
                        android:layout_toRightOf="@+id/tv_name_user"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"

                        android:textSize="11dp"

                        android:drawablePadding="4.5dp"
                        android:id="@+id/tv_age_user"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="3dp"

                        android:textColor="#73ffffff"
                        android:textSize="14dp"
                        android:id="@+id/tv_Id_user"/>
                </RelativeLayout>

                <!--<wanbao.yongchao.com.wanbao.view.allTextView.ShowAllTextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="12dp"-->
                    <!--android:layout_marginRight="12dp"-->
                    <!--android:layout_marginTop="6dp"-->
                    <!--android:text="成都小酒馆创建于1997年初； 一个小酒吧、一个艺术沙龙、一个独立唱片厂牌、 一个文化公司、一个成成都小酒馆创建于1997年初； 一个小酒吧、一个艺术沙龙、一个独立唱片厂牌、 一个文化公司、一个成都"-->
                    <!--android:textColor="#a6ffffff"-->
                    <!--android:textSize="14dp"-->
                    <!--android:id="@+id/tv_explain_short_user"-->
                    <!--&gt;</wanbao.yongchao.com.wanbao.view.allTextView.ShowAllTextView>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:textColor="#a6ffffff"
                    android:textSize="14dp"
                    android:enabled="false"
                    android:id="@+id/tv_explain_all_user" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <wanbao.yongchao.com.wanbao.view.tag.MultiLineChooseLayout
                        android:id="@+id/tag_user"
                        style="@style/HomePageTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />
                    
                    <TextView
                        android:layout_width="104dp"
                        android:layout_height="24dp"
                        android:background="@drawable/tv_followed_bg"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:drawableLeft="@mipmap/mine_icon_tab_add"
                        android:drawablePadding="4dp"
                        android:text="添加个人标签"
                        android:textColor="#fffcc725"
                        android:textSize="12dp"
                        android:id="@+id/tv_add_tags"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#40000000"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="11.5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="我的动态"
                    android:textColor="#fffcc725"
                    android:textSize="20dp"
                    android:id="@+id/tv_content_choose_user"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_container_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
        </LinearLayout>




    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#212123"
        android:id="@+id/layout_title_user"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夜未央"
            android:textColor="#d9ffffff"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_title_user"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:background="#212123"
        android:id="@+id/layout_choose_user"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:text="我的动态"
            android:textColor="#fffcc725"
            android:textSize="20dp"
            android:id="@+id/tv_choose_user"/>
    </RelativeLayout>



</RelativeLayout>
