<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#212123">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:scaleType="centerInside"
            android:src="@mipmap/navbar_button_back"
            android:id="@+id/iv_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="个人资料"
            android:textColor="#d9ffffff"
            android:textSize="16dp"
            android:id="@+id/tv_title"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/signin_data_bg">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:scaleType="centerCrop"
                        app:riv_oval="true"
                        android:id="@+id/iv_header"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="轻触更换头像"
                        android:textColor="#40ffffff"
                        android:textSize="13dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="112dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:orientation="vertical"
                    android:background="#2C2C2F">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/layout_name">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昵称"
                            android:textColor="#a6ffffff"
                            android:textSize="14dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:drawableRight="@mipmap/mine_icon_setting_right"
                            android:drawablePadding="2dp"
                            android:text=""
                            android:textColor="#d9ffffff"
                            android:textSize="14dp"
                            android:id="@+id/tv_name"/>
                    </RelativeLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#40000000"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/layout_birthday">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生日"
                            android:textColor="#a6ffffff"
                            android:textSize="14dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:drawableRight="@mipmap/mine_icon_setting_right"
                            android:drawablePadding="2dp"
                            android:text=""
                            android:textColor="#d9ffffff"
                            android:textSize="14dp"
                            android:id="@+id/tv_age"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#40000000"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/layout_sex">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别"
                            android:textColor="#a6ffffff"
                            android:textSize="14dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:text=""
                            android:textColor="#d9ffffff"
                            android:textSize="14dp"
                            android:id="@+id/tv_sex"/>
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:background="#2C2C2F"
                    android:id="@+id/layout_signer">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人说明"
                        android:textColor="#a6ffffff"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:drawableRight="@mipmap/mine_icon_setting_right"
                        android:drawablePadding="2dp"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:hint="添加个人说明，让大家更了解你"
                        android:maxEms="16"
                        android:ellipsize="start"
                        android:text=""
                        android:textColor="#d9ffffff"
                        android:textColorHint="#40ffffff"
                        android:textSize="14dp"
                        android:id="@+id/tv_signer"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:background="#2C2C2F"
                    android:id="@+id/layout_tag">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人标签"
                        android:textColor="#a6ffffff"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:drawableRight="@mipmap/mine_icon_setting_right"
                        android:drawablePadding="2dp"
                        android:singleLine="true"
                        android:hint="添加标签可以让大家更了解你哦~"
                        android:maxEms="16"
                        android:ellipsize="start"
                        android:text=""
                        android:textColor="#d9ffffff"
                        android:textColorHint="#40ffffff"
                        android:textSize="14dp"
                        android:id="@+id/tv_tag"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2C2C2F"
                    android:paddingBottom="16dp"
                    android:id="@+id/layout_tags"
                    android:visibility="gone">
                    <wanbao.yongchao.com.wanbao.view.tag.MultiLineChooseLayout
                        android:id="@+id/userTagsLab"
                        style="@style/EditUserTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="64dp"/>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>



</LinearLayout>