<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/signin_data_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/signin_button_back"
        android:scaleType="centerInside"
        android:id="@+id/register_business_back"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        android:src="@mipmap/headportrait_business"
        android:id="@+id/registerBusinessHead"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/item_business_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="商家名称"
                android:textColor="#73ffffff"
                android:textSize="14dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:theme="@style/inputStyle"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="#d9ffffff"
                android:textSize="14dp"
                android:id="@+id/edit_business_name"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="92dp"
            android:layout_marginRight="12dp"
            android:background="#40000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="联系电话"
                android:textColor="#73ffffff"
                android:textSize="14dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:theme="@style/inputStyle"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#d9ffffff"
                android:textSize="14dp"
                android:inputType="phone"
                android:id="@+id/edit_business_phone"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="92dp"
            android:layout_marginRight="12dp"
            android:background="#40000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="营业时间"
                android:textColor="#73ffffff"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#d9ffffff"
                android:textSize="14dp"
                android:drawableRight="@mipmap/signin_identity_business_right"
                android:drawablePadding="2dp"
                android:id="@+id/edit_business_time"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="92dp"
            android:layout_marginRight="12dp"
            android:background="#40000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="商家类型"
                android:textColor="#73ffffff"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#d9ffffff"
                android:textSize="14dp"
                android:drawableRight="@mipmap/signin_identity_business_right"
                android:drawablePadding="2dp"
                android:id="@+id/edit_business_type"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_business_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="区域地址"
                android:textColor="#73ffffff"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#d9ffffff"
                android:textSize="14dp"
                android:drawableRight="@mipmap/signin_identity_business_right"
                android:drawablePadding="2dp"
                android:id="@+id/edit_business_area"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="92dp"
            android:layout_marginRight="12dp"
            android:background="#40000000"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="详细地址"
                android:textColor="#73ffffff"
                android:textSize="14dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:theme="@style/inputStyle"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#d9ffffff"
                android:textSize="14dp"
                android:id="@+id/edit_business_address"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="92dp"
            android:layout_marginRight="12dp"
            android:background="#40000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="门店坐标"
                android:textColor="#73ffffff"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#d9ffffff"
                android:textSize="14dp"
                android:drawableRight="@mipmap/signin_identity_business_right"
                android:drawablePadding="2dp"
                android:id="@+id/edit_business_map"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_get_code_select"
            android:enabled="false"
            android:text="完成"
            android:textColor="#40ffffff"
            android:textSize="16dp"
            android:id="@+id/btn_register_business"/>
    </RelativeLayout>

</LinearLayout>
