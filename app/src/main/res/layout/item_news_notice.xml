<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#212123">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/message_notice"
            android:id="@+id/iv_notice"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_notice"
            android:layout_marginLeft="12dp"
            android:layout_alignTop="@+id/iv_notice"
            android:layout_marginTop="12dp"
            android:text="系统通知"
            android:textColor="#a6ffffff"
            android:textSize="14dp"
            android:id="@+id/tv_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="6dp"
            android:layout_alignLeft="@+id/tv_title"
            android:text="欢迎加入“晚豹APP”，前往“个人中心”完善更多资料，可以让更多人了解你哦~"
            android:textColor="#d9ffffff"
            android:textSize="14dp"
            android:id="@+id/tv_content"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/tv_title"
            android:id="@+id/layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="2019/11/23 16:22"
                android:textColor="#73ffffff"
                android:textSize="12dp"
                android:id="@+id/tv_time"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/mine_icon_setting_more"
                android:tint="#73000000"
                android:id="@+id/iv_more"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/layout"
            android:layout_marginTop="15.5dp"
            android:background="#40000000"/>

    </RelativeLayout>

</LinearLayout>