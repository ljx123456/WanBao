<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A000000"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <View
        android:id="@+id/dialogOver"
        android:background="#1A000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_camera_bg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择举报理由："
                    android:textColor="#d9ffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="12dp"
                    android:id="@+id/tv_title"/>
            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/actionsheets_button_close"
                android:scaleType="centerInside"
                android:id="@+id/dialog_close"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="垃圾营销"
                android:textColor="#fffcc725"
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/tv_report1"/>
            
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="#40000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="有害信息"
                android:textColor="#fffcc725"
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/tv_report5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="涉黄信息"
                android:textColor="#fffcc725"
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/tv_report2"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="#40000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="违法信息"
                android:textColor="#fffcc725"
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/tv_report6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="不实言论"
                android:textColor="#fffcc725"
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/tv_report3"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="#40000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="诈骗信息"
                android:textColor="#fffcc725"
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/tv_report7"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="人身攻击"
                android:textColor="#fffcc725"
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/tv_report4"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="#40000000"
                android:id="@+id/view8"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="内容抄袭"
                android:textColor="#fffcc725"
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/tv_report8"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
